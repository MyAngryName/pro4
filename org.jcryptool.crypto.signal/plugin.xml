<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.jcryptool.analysis"
            class="org.jcryptool.analysis.substitution.views.SubstitutionAnalysisView"
            icon="platform:/plugin/org.jcryptool.core.util/icons/analysis_icon.gif"
            id="org.jcryptool.analysis.substitution.views.View"
            name="%view.name">
      </view>
   </extension>
   <extension
         point="org.jcryptool.core.operations.analysis">
      <analysis
            name="%analysis.name2"
            viewId="org.jcryptool.analysis.substitution.views.View"
            contextHelpId="org.jcryptool.analysis.substitution.substitutionHelpID"
            icon="platform:/plugin/org.jcryptool.core.util/icons/analysis_icon.gif">
      </analysis>
   </extension>
      <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="$nl$/contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="$nl$/toc.xml"
            primary="false">
      </toc>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
    <menuContribution
            allPopups="false"
            locationURI="toolbar:org.jcryptool.analysis.substitution.views.View">
         <command
               commandId="org.jcryptool.analysis.substitution.HelpCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/help_contents.png"
               style="push"
               tooltip="%command.help.tooltip">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.jcryptool.analysis.substitution.views.View">
         <command
               commandId="org.jcryptool.analysis.substitution.RestartCommand"
               icon="platform:/plugin/org.jcryptool.core.util/icons/icon_reset.png"
               style="push"
               tooltip="%command.restart.tooltip">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.jcryptool.analysis.substitution.HelpCommand"
            name="%command.help.name">
      </command>  
      <command
            id="org.jcryptool.analysis.substitution.RestartCommand"
            name="%command.restart.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.analysis.substitution.handler.HelpHandler"
            commandId="org.jcryptool.analysis.substitution.HelpCommand">
      </handler> 
      <handler
            class="org.jcryptool.analysis.substitution.handler.RestartHandler"
            commandId="org.jcryptool.analysis.substitution.RestartCommand">
      </handler>
   </extension>

</plugin>
